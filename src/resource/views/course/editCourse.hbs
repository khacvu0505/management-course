<div class='mt-4'>
  <h3>Edit Course</h3>
  <form method='POST' action='/course/{{course._id}}?_method=PUT' >
    <div class='form-group'>
      <label for='exampleInputEmail1'>Name</label>

      <input
        type='text'
        class='form-control'
        id='name'
        name='name'
        aria-describedby='emailHelp'
        value='{{course.name}}'
      />

    </div>
    <div class='form-group'>
      <label for='exampleInputEmail1'>Description</label>
      <input
        type='text'
        class='form-control'
        id='description'
        name='description'
        aria-describedby='emailHelp'
        value="{{course.description}}""
      />

    </div>

    <button type='submit' class='btn btn-primary'>Sửa khóa học</button>
  </form>
</div>